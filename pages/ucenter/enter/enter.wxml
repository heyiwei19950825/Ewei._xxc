<!--pages/ucenter/enter/enter.wxml-->
<view class="container">
<form bindsubmit="formSubmit" bindreset="formReset">
 <view class="fb-mobile">
    <view class="label">姓名</view>
    <view class="mobile-box">
      <input class="mobile"  bindinput="bindMobile" value='{{mobile}}' placeholder="请输入姓名" />
    </view>
  </view>
   <view class="fb-mobile">
    <view class="label">身份证</view>
    <view class="mobile-box">
      <input class="mobile"  bindinput="bindMobile" value='{{mobile}}' placeholder="请输入身份证号" type='number' />
    </view>
  </view>
   <view class="fb-mobile">
    <view class="label">手机号码</view>
    <view class="mobile-box">
      <input class="mobile"  bindinput="bindMobile" value='{{mobile}}' placeholder="输入商品地址" type='number' />
    </view>
  </view>
   <view class="fb-mobile">
    <view class="label">法人</view>
    <view class="mobile-box">
      <input class="mobile"  bindinput="bindMobile" value='{{mobile}}' placeholder="请输入你的法人姓名"/>
    </view>
  </view>
   <view class="fb-mobile">
    <view class="label">地址</view>
    <view class="mobile-box">
      <input class="mobile"  bindinput="bindMobile" value='{{mobile}}' placeholder="输入商品地址" />
    </view>
  </view>
   <button  class="fb-btn" formType="submit">提交</button>
  </form>
</view>
