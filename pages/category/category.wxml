<view class="container">
    <view class="cate-nav">
        <scroll-view scroll-x="true" class="cate-nav-body" style="width: 750rpx;" scroll-left="{{scrollLeft}}">
            <view class="item {{ id == 9999 ? 'active' : ''}}" data-id="9999" bindtap="switchCate">
                <view class="name">全部商品</view>
            </view>
            <view  wx:for="{{navList}}" class="item {{ id == item.id ? 'active' : ''}}" data-id="{{item.id}}" data-index="{{index}}" bindtap="switchCate">
                <view class="name">{{item.name}}</view>
            </view>
        </scroll-view>
    </view>
    <scroll-view scroll-y="true" scroll-top="{{scrollTop}}" style="height:{{scrollHeight}};">

    <view class="cate-item">
        <view class="h">
            <text class="name">{{currentCategory.name}}</text>
            <!-- <text class="desc" wx:if="{{currentCategory.alias != null}}"> {{currentCategory.alias}}</text> -->
        </view>
        <view class="b">
            <view  class="item {{(iindex + 1) % 2 == 0 ? 'item-b' : ''}}" wx:for="{{goodsList}}" wx:for-item="iitem" wx:for-index="iindex" >
              <navigator    url="/pages/goods/goods?id={{iitem.id}}">
                <image class="img" src="{{iitem.thumb}}" background-size="cover"></image>
                <text class="name">{{iitem.name}}</text>
                <text class="price">￥{{iitem.sp_price}}</text>
                <text class="o_price">￥{{iitem.sp_o_price}}</text>
              </navigator>
              <view class="market-o" style='margin-left:55rpx;'>已售:{{iitem.sp_market}}</view>
              <view class="add-cart">
                <!-- 减号 -->
                <image src="/static/images/subtract.png" class="symbol" bindtap="subtract" wx:if="{{cartData[iitem.id]}}" data-food-id="{{iitem.id}}" />
                <!-- 数量 -->
                <view class="value">{{cartData[iitem.id]}}</view>
                <!-- 加号 -->
                <image src="/static/images/add.png" class="symbol" bindtap="add" data-food-id="{{iitem.id}}" />
              </view>
            </view>
        </view>
    </view>
    </scroll-view>
</view>