
<!--index.wxml-->
<!-- 轮播 -->
<view class="container">
  <swiper class="banner" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
    <swiper-item wx:for="{{banner}}" wx:key="{{item.id}}">
      <navigator url="{{item.link}}">
        <image src="{{item.image}}" background-size="cover"></image>
      </navigator>
    </swiper-item>
  </swiper>
  <!-- 菜单 -->
  <view class="m-menu">
    <navigator  class="item" url="/pages/category/category?id={{item.id}}" wx:for="{{channel}}" wx:key="{{item.id}}">
      <image src="{{item.icon}}" background-size="cover"></image>
      <text>{{item.name}}</text>
    </navigator>
  </view>
  <!-- 优惠券 -->
  <view class="a-section a-coupon">
    <view class="b">
      <scroll-view scroll-x="true" class="list">
        <view class="item" wx:for="{{couponList}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.coupon_type_id}}" >
          <view bindtap='userGetCoupon' data-id='{{item.coupon_type_id}}'>
            <view class="coupon-item" background-size="cover">
            <text class='price'>￥ {{item.money}}</text>
            <text class='name'>{{item.coupon_name}}</text>
            <text class='date'>{{item.start_time}}-{{item.end_time}}</text>
            <text class='note'>{{item.range_type}} 购物{{item.at_least}}元可用</text>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>
  <view class="a-section a-brand">
    <!-- <view class="h">
      <navigator url="../brand/brand">
        <text class="txt">品牌制造商直供</text>
      </navigator>
    </view> -->
    <view class="b">
      <view class="item item-1" wx:for="{{nav}}" wx:key="item.id">
        <navigator url="{{item.link}}">
          <view class="wrap">
            <image class="img" src="{{item.icon}}" mode="aspectFill"></image>
            <view class="mt">
              <!-- <text class="brand">{{item.name}}</text> -->
              <text class="price">{{item.alias}}</text>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
  <view class="a-section a-collective" wx:if="{{hotGoods.length > 0}}">
    <view class="h c">
      <view>
        <navigator url="/pages/brand/brand">
          <text class="txt">更多团购商品</text>
        </navigator>
      </view>
    </view>
    <view class="b">
      <view class="item" wx:for="{{collectiveList}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.id}}">
        <navigator url="../collective/collective?id={{item.id}}">
          <image class="img" src="{{item.thumb}}" background-size="cover"></image>
          <view class="right">
            <view class="text">
              <text class="name">{{item.name}}</text>
              <text class="desc">{{item.prefix_title}}</text>
              <text class="collective-name"> 单购 价格 <text class="price">￥{{item.sp_price}}</text></text>
              <text class="collective-name"> {{item.user_number}}人团 价格 <text class="collective-price">￥{{item.goods_price}}</text></text>
              
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
  <view class="a-section a-new" wx:if="{{newGoods.length > 0}}">
    <view class="h">
      <view>
        <navigator>
          <text class="txt">新品首发</text>
        </navigator>
      </view>
    </view>
    <view class="b">
      <view class="item" wx:for="{{newGoods}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.id}}">
        <navigator url="../goods/goods?id={{item.id}}">
          <image class="img" src="{{item.thumb}}" background-size="cover"></image>
          <text class="name">{{item.name}}</text>
          <text class="price">￥{{item.sp_price}}</text>
        </navigator>
      </view>
    </view>
  </view>
  <view class="a-section a-popular" wx:if="{{hotGoods.length > 0}}">
    <view class="h">
      <view>
        <navigator url="../hotGoods/hotGoods">
          <text class="txt">人气推荐</text>
        </navigator>
      </view>
    </view>
    <view class="b">
      <view class="item" wx:for="{{hotGoods}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.id}}">
        <navigator url="/pages/goods/goods?id={{item.id}}">
          <image class="img" src="{{item.thumb}}" background-size="cover"></image>
          <view class="right">
            <view class="text">
              <text class="name">{{item.name}}</text>
              <text class="desc">{{item.prefix_title}}</text>
              <text class="price">￥{{item.sp_price}}</text>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
  <view class="a-section a-topic" wx:if="topics.length > 0">
    <view class="h c">
      <view>
      <navigator url="../topic/topic" open-type="switchTab">
        <text class="txt">精选文章</text>
        </navigator>
      </view>
    </view>
    <view class="b">
      <scroll-view scroll-x="true" class="list">
        <view class="item" wx:for="{{topics}}" wx:for-index="index" wx:for-item="item" wx:key="{{item.id}}">
          <navigator url="../topicDetail/topicDetail?id={{item.id}}">
            <image class="img" src="{{item.thumb}}" background-size="cover"></image>
            <view class="np">
              <text class="name">{{item.title}}</text>
              <!-- <text class="price">￥{{item.price_info}}元起</text> -->
            </view>
            <text class="desc">{{item.introduction}}</text>
          </navigator>
        </view>
      </scroll-view>
    </view>
  </view>
  <view class="good-grid" wx:for="{{floorGoods}}" wx:key="{{item.id}}">
    <view class="h" wx:if="{{item.goodsList  != ''}}">
      <view>
        <text>{{item.name}}</text>
      </view>
    </view>
    <view class="b" wx:if="{{item.goodsList  != ''}}">
      <block wx:for="{{item.goodsList}}" wx:for-index="iindex" wx:for-item="iitem" wx:key="{{iitem.id}}">
        <view class="item {{iindex % 2 == 0 ? '' : 'item-b'}}"  >
          <navigator url="../goods/goods?id={{iitem.id}}" class="a">
            <image class="img" src="{{iitem.thumb}}" background-size="cover"></image>
            <text class="name">{{iitem.name}}</text>
            <text class="price">￥{{iitem.sp_price}}</text>
          </navigator>
        </view>
      </block>
      <view class="item item-b item-more">
          <navigator url="/pages/category/category?id={{item.id}}" class="more-a">
            <view class="txt">{{'更多'+item.name+'好物'}}</view>
            <image class="icon" src="../../static/images/icon_go_more.png" background-size="cover"></image>
          </navigator>
      </view>
    </view>
  </view>
  <!-- 通告弹窗 -->
  <!-- <view class="pop-alert-box">
    <image src="../../static/img/icon_alert.png" class="icon_alert"/>
    <i class="iconfont icon-close"/>
  </view> -->
</view>